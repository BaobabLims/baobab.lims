<?xml version="1.0" encoding="UTF-8"?>

<!-- Operation Definitions -->
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="baobab">
    <record name="bika.lims.client.default_landing_page">
        <field type="plone.registry.field.Choice">
        <default>projects</default>
        <description i18n:translate="">Select the default landing page. This is used when a Client user logs into the system, or when a client is selected from the client folder listing.</description>
        <required>True</required>
        <title i18n:translate="">Client Landing Page</title>
        <values>
            <element>projects</element>
            <element>batches</element>
            <element>analysisrequests</element>
        </values>
        </field>
    </record>
     <record name="baobab.lims.biospecimen.units">
        <field type="plone.registry.field.Tuple">
            <title i18n:translate="">Units</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element>other</element>
            <element>ul</element>
            <element>ml</element>
            <element>mg</element>
            <element>g</element>
        </value>
    </record>
    <record name="baobab.lims.samplebatch.batch_types">
        <field type="plone.registry.field.Tuple">
            <title i18n:translate="">Batch Types</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element></element>
            <element>Whole Blood</element>
            <element>Whatman Card</element>
            <element>Plasma</element>
            <element>Serum</element>
            <element>Buffy Coat</element>
            <element>Plasma and Buffy Coat</element>
            <element>Urine</element>
            <element>Urine Sediment</element>
            <element>ESwab</element>
            <element>Dacron Swab</element>
            <element>Heel Swab</element>
            <element>Placental Tissue</element>
            <element>Formalin Sample</element>
            <element>Umbilical Cord Tissue</element>
            <element>Neonatal Stool</element>
        </value>
    </record>
</registry>
