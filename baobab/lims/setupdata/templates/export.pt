<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="baobab">
<body>

<metal:content-title fill-slot="content-title">
    <h1>
        <img tal:condition="view/icon | nothing"
             src="" tal:attributes="src view/icon"/>
        <span class="documentFirstHeading">Export</span>
    </h1>
</metal:content-title>

<metal:content-description fill-slot="content-description">
    <div class="documentDescription">
        Export your data ...
    </div>
</metal:content-description>

<metal:content-core fill-slot="content-core">

    <form tal:condition="exists:view/submit_button" name="import" method="POST" enctype="multipart/form-data">
        <input tal:replace="structure context/@@authenticator/authenticator"/>
        <input type="hidden" name="submitted" value="1"/>

        <fieldset id="fieldset-setupdata" tal:condition="python:checkPermission('BIKA: Manage Bika', context)">
            <legend id="fieldsetlegend-setupdata" i18n:translate="">Export Data</legend>

            <div style="margin-bottom:30px;">
                <div style="float:left;width:47%;">
                    <h2 style="margin-bottom:10px;border-bottom:1px solid #888;font-size:1.6em;">
                        <span i18n:translate="">Export to file</span>
                    </h2>
                    <input name="setupfile" type="submit" value="Export" i18n:attributes="value"/>
                    <p></p>
                    <span i18n:translate="">Tip. Data will be exported and placed in exports folder under zeocluster folder.</span>
                </div>
            </div>
        </fieldset>
    </form>

    <!--?<div tal:condition="exists:view/download_file">-->
        <!--?<a href="/home/quinton/PloneMyPlone/zeocluster/excel_export_1.xlsx" download>-->
          <!--?Download your export-->
        <!--?</a>-->
    <!--?</div>-->


</metal:content-core>

</body>
</html>
